# =============================================================================
# NIRVANA Phase 0 Infrastructure Configuration
# =============================================================================
# Copy this file to .env and customize values as needed
# Working defaults are UNCOMMENTED - optional/advanced settings are COMMENTED
# =============================================================================

# -----------------------------------------------------------------------------
# MILVUS VECTOR DATABASE
# -----------------------------------------------------------------------------
# Port for Milvus gRPC API
MILVUS_PORT=19530
# Milvus standalone mode
MILVUS_STANDALONE=true
# etcd endpoints for Milvus metadata storage
ETCD_ENDPOINTS=etcd:2379
# MinIO endpoints for Milvus object storage
MINIO_ADDRESS=minio:9000
# MinIO credentials
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
# Milvus data directory
MILVUS_DATA_PATH=./data/milvus

# Advanced Milvus Settings (OPTIONAL - uncomment to customize)
# MILVUS_LOG_LEVEL=info
# MILVUS_SEGMENT_SIZE_MB=512
# MILVUS_INDEX_BUILDING_THRESHOLD=0.85

# -----------------------------------------------------------------------------
# QDRANT VECTOR DATABASE
# -----------------------------------------------------------------------------
# Port for Qdrant HTTP API
QDRANT_PORT=6333
# Port for Qdrant gRPC API
QDRANT_GRPC_PORT=6334
# Qdrant data directory
QDRANT_DATA_PATH=./data/qdrant
# Qdrant API key (leave empty for no auth in local mode)
QDRANT_API_KEY=

# Advanced Qdrant Settings (OPTIONAL - uncomment to customize)
# QDRANT_LOG_LEVEL=INFO
# QDRANT_COLLECTION_SIZE=4294967296

# -----------------------------------------------------------------------------
# POSTGRESQL DATABASE
# -----------------------------------------------------------------------------
# PostgreSQL port
POSTGRES_PORT=5432
# PostgreSQL credentials
POSTGRES_USER=nirvana
POSTGRES_PASSWORD=nirvana_local_pass
POSTGRES_DB=nirvana
# PostgreSQL data directory
POSTGRES_DATA_PATH=./data/postgres

# Advanced PostgreSQL Settings (OPTIONAL - uncomment to customize)
# POSTGRES_MAX_CONNECTIONS=100
# POSTGRES_SHARED_BUFFERS=256MB

# -----------------------------------------------------------------------------
# FLOWISE (LLM Flow Orchestration)
# -----------------------------------------------------------------------------
# Port for Flowise web UI and API
FLOWISE_PORT=3000
# Flowise username (leave empty for no auth in local mode)
FLOWISE_USERNAME=admin
# Flowise password (leave empty for no auth in local mode)
FLOWISE_PASSWORD=admin
# Database connection for Flowise (uses PostgreSQL)
FLOWISE_DATABASE_TYPE=postgres
FLOWISE_DATABASE_HOST=postgres
FLOWISE_DATABASE_PORT=5432
FLOWISE_DATABASE_NAME=flowise
FLOWISE_DATABASE_USER=nirvana
FLOWISE_DATABASE_PASSWORD=nirvana_local_pass
# Flowise data directory
FLOWISE_DATA_PATH=./data/flowise

# Advanced Flowise Settings (OPTIONAL - uncomment to customize)
# FLOWISE_SECRETKEY_OVERWRITE=your-secret-key-here
# FLOWISE_EXECUTION_MODE=main

# -----------------------------------------------------------------------------
# N8N (Workflow Automation)
# -----------------------------------------------------------------------------
# Port for n8n web UI and API
N8N_PORT=5678
# n8n basic auth credentials
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin
# Database connection for n8n (uses PostgreSQL)
N8N_DB_TYPE=postgresdb
N8N_DB_POSTGRESDB_HOST=postgres
N8N_DB_POSTGRESDB_PORT=5432
N8N_DB_POSTGRESDB_DATABASE=n8n
N8N_DB_POSTGRESDB_USER=nirvana
N8N_DB_POSTGRESDB_PASSWORD=nirvana_local_pass
# n8n data directory
N8N_DATA_PATH=./data/n8n

# Advanced n8n Settings (OPTIONAL - uncomment to customize)
# N8N_ENCRYPTION_KEY=your-encryption-key-here
# N8N_EXECUTIONS_MODE=regular
# N8N_TIMEZONE=America/Los_Angeles

# -----------------------------------------------------------------------------
# JUPYTER NOTEBOOK SERVER
# -----------------------------------------------------------------------------
# Port for Jupyter web UI
JUPYTER_PORT=8888
# Jupyter token for authentication (leave empty for no token in local mode)
JUPYTER_TOKEN=nirvana
# Jupyter notebook directory
JUPYTER_NOTEBOOK_DIR=/home/jovyan/work
# Jupyter data directory
JUPYTER_DATA_PATH=./data/jupyter

# Advanced Jupyter Settings (OPTIONAL - uncomment to customize)
# JUPYTER_ENABLE_LAB=yes
# JUPYTER_ALLOW_ROOT=yes

# -----------------------------------------------------------------------------
# APACHE TIKA (Content Extraction)
# -----------------------------------------------------------------------------
# Port for Tika server API
TIKA_PORT=9998
# Tika memory settings
TIKA_JAVA_HEAP_SIZE=1g

# Advanced Tika Settings (OPTIONAL - uncomment to customize)
# TIKA_OCR_ENABLED=true
# TIKA_MAX_FILE_SIZE=1000000000

# -----------------------------------------------------------------------------
# ETCD (Metadata Store for Milvus)
# -----------------------------------------------------------------------------
# etcd client port
ETCD_PORT=2379
# etcd peer port
ETCD_PEER_PORT=2380
# etcd data directory
ETCD_DATA_PATH=./data/etcd

# -----------------------------------------------------------------------------
# MINIO (Object Storage for Milvus)
# -----------------------------------------------------------------------------
# MinIO API port
MINIO_PORT=9000
# MinIO console port
MINIO_CONSOLE_PORT=9001
# MinIO data directory
MINIO_DATA_PATH=./data/minio

# -----------------------------------------------------------------------------
# GPU SETTINGS
# -----------------------------------------------------------------------------
# Enable GPU support for Milvus (set to 'true' to use docker-compose.gpu.yml)
USE_GPU=false
# GPU device IDs (comma-separated, e.g., "0,1" for multiple GPUs)
GPU_DEVICE_IDS=0

# Advanced GPU Settings (OPTIONAL - uncomment to customize)
# CUDA_VISIBLE_DEVICES=0
# NVIDIA_VISIBLE_DEVICES=all

# -----------------------------------------------------------------------------
# NETWORK SETTINGS
# -----------------------------------------------------------------------------
# Docker network name for inter-service communication
DOCKER_NETWORK_NAME=nirvana-network

# -----------------------------------------------------------------------------
# API KEYS & EXTERNAL SERVICES (OPTIONAL)
# -----------------------------------------------------------------------------
# Add your API keys for LLM providers
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# GOOGLE_API_KEY=AIza...
# HUGGINGFACE_API_KEY=hf_...

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------
# Application port (for the main NIRVANA web app)
APP_PORT=5000
# Node environment
NODE_ENV=development
