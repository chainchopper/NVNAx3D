# -----------------------------------------------------------------------------
# PRODUCTIVITY TOOL APIS
# -----------------------------------------------------------------------------
NOTION_TOKEN=
LINEAR_API_KEY=
SLACK_BOT_TOKEN=
JIRA_TOKEN=
JIRA_DOMAIN=
ASANA_TOKEN=
CONFLUENCE_TOKEN=
CONFLUENCE_DOMAIN=

# -----------------------------------------------------------------------------
# HOME AUTOMATION & VISION
# -----------------------------------------------------------------------------
HOME_ASSISTANT_URL=
HOME_ASSISTANT_TOKEN=
FRIGATE_URL=
FRIGATE_API_KEY=
CODEPROJECT_AI_URL=http://localhost:32168
YOLO_API_URL=

# -----------------------------------------------------------------------------
# POSTGRESQL DATABASE (Local via Docker)
# -----------------------------------------------------------------------------
POSTGRES_PORT=5432
POSTGRES_USER=nirvana
POSTGRES_PASSWORD=nirvana_local_pass
POSTGRES_DB=nirvana
POSTGRES_DATA_PATH=./data/postgres
DATABASE_URL=postgresql://nirvana:nirvana_local_pass@localhost:5432/nirvana

# -----------------------------------------------------------------------------
# CHROMADB VECTOR DATABASE (Embedded - No Docker)
# -----------------------------------------------------------------------------
CHROMA_PERSIST_DIRECTORY=./data/chroma

# -----------------------------------------------------------------------------
# CORS & CSP SECURITY SETTINGS
# -----------------------------------------------------------------------------
# CORS allowed origins (comma-separated, use * for development to allow all origins)
# Default: * in development, specific origins in production
CORS_ALLOWED_ORIGINS=*

# Content Security Policy directives
# Default: permissive in development, strict in production
# Format: "directive1 value1; directive2 value2; directive3 value3"
# Leave empty to use default based on NODE_ENV
CSP_DIRECTIVES=

# Examples for production (uncomment and customize):
# CORS_ALLOWED_ORIGINS=https://myapp.com,https://api.myapp.com
# CSP_DIRECTIVES="default-src 'self'; script-src 'self' https://esm.sh; connect-src 'self' https://api.openai.com"
