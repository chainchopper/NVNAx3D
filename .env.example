# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:5000/oauth/callback
GOOGLE_ACCESS_TOKEN=

# -----------------------------------------------------------------------------
# TWILIO TELEPHONY (SMS & Voice)
# -----------------------------------------------------------------------------
# Get from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# -----------------------------------------------------------------------------
# FINANCIAL DATA APIS
# -----------------------------------------------------------------------------
ALPHA_VANTAGE_API_KEY=
FINNHUB_API_KEY=
COINMARKETCAP_API_KEY=

# -----------------------------------------------------------------------------
# MUSIC & MEDIA
# -----------------------------------------------------------------------------
AUDD_API_TOKEN=
GENIUS_API_TOKEN=

# -----------------------------------------------------------------------------
# OAUTH PROVIDERS (Additional)
# -----------------------------------------------------------------------------
COINBASE_CLIENT_ID=
COINBASE_CLIENT_SECRET=
COINBASE_REDIRECT_URI=http://localhost:5000/oauth/callback

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:5000/oauth/callback
GITHUB_TOKEN=

MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_REDIRECT_URI=http://localhost:5000/oauth/callback
